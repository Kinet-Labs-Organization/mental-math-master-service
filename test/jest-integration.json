{
  "displayName": "Integration Tests",
  "testMatch": ["**/test/integration/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "moduleNameMapper": {
    "^@/src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/helpers/jest.setup.ts"],
  "testTimeout": 30000
}
