{
  "displayName": "Unit Tests",
  "testMatch": ["**/test/unit/**/*.spec.ts"],
  "moduleFileExtensions": ["js", "json", "ts"],
  "rootDir": "../",
  "testEnvironment": "node",
  "transform": {
    "^.+\\.(t|j)s$": "ts-jest"
  },
  "collectCoverageFrom": [
    "src/**/*.(t|j)s",
    "!src/**/*.spec.ts",
    "!src/**/*.interface.ts",
    "!src/main.ts"
  ],
  "coverageDirectory": "coverage/unit",
  "moduleNameMapper": {
    "^@/src/(.*)$": "<rootDir>/src/$1"
  },
  "setupFilesAfterEnv": ["<rootDir>/test/helpers/jest.setup.ts"]
}
