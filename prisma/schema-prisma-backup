generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  directUrl = env("DIRECT_URL")
}

enum Role {
  super_admin
  admin
  normal
  agent
}

model User {
  id             String   @id @default(uuid())
  email          String   @unique
  password       String?
  name           String
  company_name   String
  company_id     String   @default(uuid())
  phone          String?
  sign_up_method String
  role           Role
  created_date   DateTime @default(now())
  updated_date   DateTime @updatedAt
}

model Customer {
  id           String   @id @default(uuid())
  name         String?
  email        String?
  phone        String?
  address      String?
  orders       String[]
  company_id   String
  created_date DateTime @default(now())
  updated_date DateTime @updatedAt

  @@map("customers")
}

model Order {
  id               String    @id @default(uuid())
  order_details    Json[]
  customer_details Json
  order_note       String?
  total            Float
  company_id       String
  billed_by        String
  created_date     DateTime? @default(now())
  updated_date     DateTime? @updatedAt

  @@map("orders")
}
